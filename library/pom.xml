<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.slidingmenu</groupId>
	<artifactId>slidingmenu</artifactId>
    <version>0.0.9</version>
	<name>SlidingMenu</name>
	<packaging>apklib</packaging>

	<parent>
		<groupId>com.zenittude</groupId>
		<artifactId>zenittude-android-parent</artifactId>
		<version>0.0.9-SNAPSHOT</version>
        <relativePath>../../../pom.xml</relativePath>
	</parent>

	<properties>
		<scm.branch>master</scm.branch>
	</properties>

	<scm>
		<url>https://github.com/zenittude/SlidingMenu/tree/${scm.branch}</url>
		<connection>scm:git:https://github.com/zenittude/SlidingMenu.git</connection>
		<developerConnection>scm:git:https://github.com/zenittude/SlidingMenu.git</developerConnection>
		<tag>slidingmenu-0.0.9</tag>
    </scm>

	<dependencies>
		<dependency>
			<groupId>com.google.android</groupId>
			<artifactId>android</artifactId>
		</dependency>
        <dependency>
            <groupId>com.google.android.maps</groupId>
            <artifactId>maps</artifactId>
            <version>17_r3</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>android.support</groupId>
            <artifactId>compatibility-v4</artifactId>
            <version>19</version>
        </dependency>
	</dependencies>

	<build>
		<sourceDirectory>src</sourceDirectory>
		<plugins>
			<plugin>
				<groupId>com.jayway.maven.plugins.android.generation2</groupId>
				<artifactId>android-maven-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<nativeLibrariesDirectory>ignored</nativeLibrariesDirectory>
					<attachSources>true</attachSources>
					<sdk>
						<platform>16</platform>
					</sdk>
					<undeployBeforeDeploy>true</undeployBeforeDeploy>
				</configuration>
			</plugin>

            <!--plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>1.7</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>attach-artifact</goal>
                        </goals>
                        <configuration>
                            <artifacts>
                                <artifact>
                                    <type>jar</type>
                                    <file>${project.build.directory}/${project.build.finalName}.jar</file>
                                </artifact>
                            </artifacts>
                        </configuration>
                    </execution>
                </executions>
            </plugin-->
		</plugins>
	</build>
</project>
